pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-unit:1.21'
                    reuseNode true
                }
            }
            steps {
                dir ('bugtracker-backend') {
                    sh 'go test -v ./...'
                }
            }
        }

        stage('Unit test -Frontend') {
            agent {
                docker {
                    image 'node:-20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-frontend') {
                    sh '''
                        npm ci
                        npm test
                    '''    
                }
            }
        }
    }
}
